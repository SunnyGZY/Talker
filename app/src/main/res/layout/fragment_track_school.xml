<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.sunny.talker.push.fragments.track.SchoolTrackFragment">

    <TextView
        android:id="@+id/tv_new_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/len_6"
        android:background="@drawable/bg_pop_track"
        android:elevation="@dimen/len_12"
        android:outlineProvider="background"
        android:textColor="@color/white"
        android:translationY="-120dp"
        android:visibility="invisible"
        tools:text="5条新动态" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_recycler"
        android:elevation="1dp"
        android:outlineProvider="bounds" />

    <ImageView
        android:id="@+id/iv_load"
        android:layout_width="@dimen/len_28"
        android:layout_height="@dimen/len_28"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/len_6"
        android:background="@drawable/bg_circle_count"
        android:contentDescription="@string/app_name"
        android:elevation="@dimen/len_16"
        android:outlineProvider="background"
        android:tint="@color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/len_10"
        android:background="@drawable/bg_track_select"
        android:text="@string/show_track_school"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/font_12" />

    <net.sunny.talker.common.widget.EmptyView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_friend" />
</RelativeLayout>