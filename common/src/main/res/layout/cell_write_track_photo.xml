<?xml version="1.0" encoding="utf-8"?>
<net.sunny.talker.common.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/len_2"
    android:background="#F4F5F9"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/default_portrait" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="end"
        android:background="@color/black_alpha_32"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_fork"
        android:tint="@color/grey700" />
</net.sunny.talker.common.widget.SquareLayout>